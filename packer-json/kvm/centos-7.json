{
  "builders":
  [
    {
      "type": "qemu",
      "iso_url": "http://mirrors.ircam.fr/pub/CentOS/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",
      "iso_checksum": "aae20c8052a55cf179af88d9dd35f1a889cd5773",
      "iso_checksum_type": "sha1",
      "output_directory": "centos_img",
      "shutdown_command": "shutdown -P now",
      "disk_size": 5000,
      "format": "qcow2",
      "headless": false,
      "accelerator": "kvm",
      "http_directory": "kickstart-preseed",
      "ssh_username": "root",
      "ssh_password": "secret",
      "ssh_port": 22,
      "ssh_timeout": "600s",
      "vm_name": "centos-7",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "boot_command": [
        "<tab> text biosdevname=0 net.ifnames=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-7.ks ip=dhcp noipv6<enter><wait>"
      ]
    }
  ],
  "provisioners":
  [
    {
      "type": "ansible",
      "playbook_file": "ansible-playbook/local.yml",
      "groups": ["packer-build"],
      "extra_arguments": ["-vvvv"],
      "user": "root"
    },
    {
      "type": "file",
      "source": "inspec",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": [
        "sudo -E yum install https://packages.chef.io/files/stable/inspec/2.1.54/el/7/inspec-2.1.54-1.el7.x86_64.rpm -y",
        "inspec exec /tmp/inspec/spec",
        "sudo -E yum remove inspec -y -q -e 0"
      ]
    }
  ]
}
